#!/bin/sh

# this is executed in the docker fpm image
set -e
cd /build

mkdir /{{beat_name}}-{{version}}-windows
cp {{beat_name}}-windows-386.exe /{{beat_name}}-{{version}}-windows/{{beat_name}}
cp {{beat_name}}-win.yml /{{beat_name}}-{{version}}-windows/{{beat_name}}.yml
cp {{beat_name}}.template.json /{{beat_name}}-{{version}}-windows/

zip -r {{beat_name}}-{{version}}-windows.zip /{{beat_name}}-{{version}}-windows
echo "Created {{beat_name}}-{{version}}-windows.zip"

sha1sum {{beat_name}}-{{version}}-windows.zip > {{beat_name}}-{{version}}-windows.zip.sha1
echo "Created {{beat_name}}-{{version}}-windows.zip.sha1"
